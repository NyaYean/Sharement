<!-- <h2>Welcome to Sharement</h2> -->


		<% if current_user %>
		<div id='welcome-landing'>
			<h2>Welcome <%=current_user.username %> </h2>
			
		</div>
			<%= link_to 'New Agreement', new_agreement_path, class: 'btn btn-info btn-xs'%>
			<div id= "user-landing">
				<h2>List of Agreements</h2>
			<% @user.agreements.each do |agreement| %>
			
				
				<h5>Name</h5>
				<p><%=agreement.name%></p>
				<h5>Description</h5>
  			<p><%=agreement.description%></p>
  			<h5>Start Date</h5>
  			<p><%=agreement.start_date%></p>
  			<h5>Details</h5>
  			<p><%=agreement.agreement_details%></p>
  			<h5>Friends</h5>
  			<p><%=agreement.payer%></p>
  			<%= link_to 'Edit Agreement', edit_agreement_path(agreement), class: 'btn btn-info btn-xs' %>
			<%= link_to 'Delete Agreement', agreement_path(agreement), method: :delete, class: 'btn btn-danger btn-xs' , data: {confirm: 'Are you sure you want to delete your agreement?'}%>
			</div>
			<%end%>

		<% else %>

		<div style="position: fixed; z-index: -99; width: 100%; height: 100%">
  <!-- <iframe frameborder="0" height="100%" width="100%" 
    src="https://youtube.com/embed/U2PtyJxozWA?autoplay=1&controls=0&showinfo=0&autohide=1">
  </iframe> -->
	</div>
 

		<div id= "landing">
			<h1> Sharement </h1>
			<img src = "https://cdn2.iconfinder.com/data/icons/windows-8-metro-style/512/handshake.png">
			<div id="mini-nav">
				<%= link_to 'Sign Up', new_user_path %>
				<%= link_to 'Log In', sessions_new_path %>
			</div>
		</div>
		<% end %>
